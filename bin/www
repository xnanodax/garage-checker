const http = require('http');
const socketIO = require('socket.io');
var app = require('../server/server');
var appPort = 3002;
var serverPort = 4001;

const server = http.createServer(app);
const io = socketIO(server);

var router = require('../server/routes/routes');

io.on('connection', socket => {
  console.log('ww New client connected');

  socket.on('change color', (color) => {
    console.log('ww Color changed to: ', color);
    io.emit('change color', color);
  })

  socket.on('update door status', (status) => {
    console.log('ww Color changed to: ', status);
    io.emit('update door status', status);
  })

  socket.on('disconnect', () => {
    console.log('ww user disconnected');
  })
})

app.use('/', router(io));


server.listen(process.env.PORT || serverPort, function() {
 console.log('App: running at localhost: ' + serverPort);
});